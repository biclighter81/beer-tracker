{
  "name": "beer-tracker",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "release": "npx --no-install semantic-release"
  },
  "dependencies": {
    "@ericblade/quagga2": "^1.8.4",
    "@tabler/icons-react": "^3.7.0",
    "chart.js": "^4.4.3",
    "preact": "^10.22.0",
    "preact-router": "^4.1.2",
    "react-chartjs-2": "^5.2.0",
    "workbox-precaching": "^7.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@preact/preset-vite": "^2.8.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "semantic-release": "^24.0.0",
    "semantic-release-monorepo": "^8.0.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vite-plugin-pwa": "^0.20.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "chmod +x git-build.sh",
          "publishCmd": "./git-build.sh ${nextRelease.version} ${branch.name}"
        }
      ]
    ],
    "branches": [
      "master",
      "main",
      {
        "name": "alpha",
        "prerelease": "alpha",
        "channel": "alpha"
      },
      {
        "name": "beta",
        "prerelease": "beta",
        "channel": "beta"
      },
      {
        "name": "hotfix/**",
        "prerelease": "hotfix",
        "channel": "hotfix"
      },
      {
        "name": "bugfix/**",
        "prerelease": "${name.split('/').slice(0, 2).join('-').toLowerCase()}",
        "channel": "${name.split('/').slice(0, 2).join('-').toLowerCase()}"
      },
      {
        "name": "feature/**",
        "prerelease": "${name.split('/').slice(0, 2).join('-').toLowerCase()}",
        "channel": "${name.split('/').slice(0, 2).join('-').toLowerCase()}"
      },
      {
        "name": "sprint/**",
        "prerelease": "${name.split('/').slice(0, 2).join('-').toLowerCase()}",
        "channel": "${name.split('/').slice(0, 2).join('-').toLowerCase()}"
      }
    ]
  }
}
